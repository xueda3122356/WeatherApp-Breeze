            android:layout_height="wrap_content">

        </Space>

        <Switch
            android:id="@+id/btnSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:showText="true"
            android:thumb = "@drawable/thumb"
            app:track="@drawable/track">

        </Switch>
    </LinearLayout>


